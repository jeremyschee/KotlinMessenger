<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"

                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_chat_to_row"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin varius iaculis accumsan. Nulla sodales egestas nunc, vitae rhoncus ante tempor a. Nam rutrum metus ut hendrerit fermentum."
